import streamlit as st

# Pengaturan Halaman
st.set_page_config(page_title="Portofolio | Christian Winanto", page_icon="âš½", layout="centered")

# --- HEADER SECTION ---
st.title("Hi, Saya Christian Winanto ðŸ‘‹")
st.subheader("Siswa SMA Prestasi Prima | Futsal Athlete")

# Menghitung Umur Secara Otomatis (Opsional)
from datetime import date
today = date.today()
age = today.year - 2009 - ((today.month, today.day) < (12, 31))

# --- BIODATA ---
with st.container():
    st.write("---")
    left_column, right_column = st.columns(2)
    with left_column:
        st.header("Biodata Diri")
        st.write(
            f"""
            - **Nama Lengkap:** Christian Winanto
            - **Tanggal Lahir:** 31 Desember 2009
            - **Umur:** {age} Tahun
            - **Pendidikan:** SMA Prestasi Prima
            - **Lokasi:** Indonesia
            """
        )
    with right_column:
        # Tempat untuk hobi/karakter
        st.header("Tentang Saya")
        st.write(
            "Saya adalah seorang pelajar yang berdedikasi tinggi baik dalam bidang akademik "
            "maupun non-akademik. Saya percaya bahwa disiplin di lapangan futsal "
            "berbanding lurus dengan disiplin dalam belajar."
        )

# --- KEUNGGULAN & SKILL ---
with st.container():
    st.write("---")
    st.header("Keahlian Utama: Futsal âš½")
    
    col1, col2, col3 = st.columns(3)
    with col1:
        st.subheader("Agility")
        st.write("Kemampuan pergerakan cepat di lapangan.")
    with col2:
        st.subheader("Teamwork")
